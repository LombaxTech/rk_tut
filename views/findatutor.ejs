        <label for="">female?</label>
        <input type="checkbox" name="gender" value="female" id="">
         -->
         <button>Filter By Subject</button>
    </form>

    <h1>FIND A TUTOR</h1>
    
    <% if (typeof filteredTutors != 'undefined') {
        filteredTutors.forEach(tutor => {%>
            <div class="tutor">
                <h2>Name: <%= tutor.name %></h2>
                <form action="/tutors/<%= tutor.email  %>" method="GET">
                    <button>View Profile</button>    
                </form>
            </div>  
        <%})
    }%>
    
</body>
</html>